@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-container">
    <div class="search-bar">
        <input type="text" placeholder="Search..." />
    </div>

    <div class="stats">
        <div class="stat-box">
            <h3>Active Projects</h3>
            <p>124</p>
            <span class="positive">+12%</span>
        </div>
        <div class="stat-box">
            <h3>Monthly Revenue</h3>
            <p>$52,389</p>
            <span class="positive">+8%</span>
        </div>
        <div class="stat-box">
            <h3>New Inquiries</h3>
            <p>89</p>
            <span class="positive">+24%</span>
        </div>
        <div class="stat-box">
            <h3>Active Chats</h3>
            <p>12</p>
            <span class="positive">+5%</span>
        </div>
    </div>

    <div class="content">
        <div class="blog-posts">
            <h3>Recent Blog Posts</h3>
            <table>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                <tr>
                    <td>2024 Interior Design Trends</td>
                    <td>Sarah Johnson</td>
                    <td><span class="status published">Published</span></td>
                    <td>Jan 15, 2024</td>
                    <td>
                        <button class="edit">✏️</button>
                        <button class="delete">🗑️</button>
                    </td>
                </tr>
                <tr>
                    <td>Sustainable Home Decor Guide</td>
                    <td>Mike Peters</td>
                    <td><span class="status draft">Draft</span></td>
                    <td>Jan 14, 2024</td>
                    <td>
                        <button class="edit">✏️</button>
                        <button class="delete">🗑️</button>
                    </td>
                </tr>
                <tr>
                    <td>Small Space Solutions</td>
                    <td>Emma Wilson</td>
                    <td><span class="status published">Published</span></td>
                    <td>Jan 13, 2024</td>
                    <td>
                        <button class="edit">✏️</button>
                        <button class="delete">🗑️</button>
                    </td>
                </tr>
            </table>
        </div>

        <div class="style-categories">
            <h3>Style Categories</h3>
            <ul>
                <li>Modern <span>45 projects</span></li>
                <li>Contemporary <span>38 projects</span></li>
                <li>Minimalist <span>32 projects</span></li>
                <li>Traditional <span>28 projects</span></li>
            </ul>
        </div>

        <div class="budget-overview">
            <h3>Budget Overview</h3>
            <img src="~/Content/chart.png" alt="Budget Chart" />
        </div>

        <div class="active-projects">
            <h3>Active Projects</h3>
            <div class="project">
                <span>Luxury Apartment</span>
                <div class="progress-bar"><div class="progress" style="width: 75%;"></div></div>
            </div>
            <div class="project">
                <span>Modern Office</span>
                <div class="progress-bar"><div class="progress" style="width: 45%;"></div></div>
            </div>
            <div class="project">
                <span>Beach House</span>
                <div class="progress-bar"><div class="progress" style="width: 90%;"></div></div>
            </div>
        </div>
    </div>
</div>
