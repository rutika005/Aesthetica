@{
    ViewData["Title"] = "Register";
}
<div class="register-wrapper">
<div class="register-container">
    <div class="left-section">
        <h1>Register</h1>
        <p>Create a new account to explore the world of interior design</p>
    </div>
    <div class="right-section">
        <form method="post">
            <label for="fullName">Full Name</label>
            <input type="text" id="fullName" name="fullName" placeholder="Enter your full name" required>
            <small>Please provide your full name</small>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" required>
            <small>We'll send a verification link to this email</small>

            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter a password" required>
            <small>Password must be at least 8 characters</small>

            <label for="confirmPassword">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Re-enter your password" required>
            <small>Passwords must match</small>

            <button type="button" class="btn-secondary" onclick="window.location.href='/Login'">Already have an account? Sign in</button>
            <button type="submit" class="btn-primary">Register</button>
        </form>
    </div>
</div>
</div>