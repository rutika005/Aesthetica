@{
    ViewData["Title"] = "Home Page";
}


<div>
    <section class="text-white d-flex justify-content-center align-items-center position-relative"
             style="background-image: url('https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg?cs=srgb&dl=pexels-fotoaibe-1571460.jpg&fm=jpg');
           background-size: cover;
           background-position: center;
           min-height: 580px;
           width: 100%;">

        <!-- Background Overlay for Better Readability -->
        <div class="position-absolute top-0 start-0 w-100 h-100"
             style="background: rgba(0, 0, 0, 0.5);"></div>

        <h1 class="fw-bold position-relative text-center">PROFESSIONAL INTERIOR DESIGN</h1>
    </section>



    <section class="container text-center py-5">
        <h2>Services</h2>
        <p>We offer a variety of helpful tools and features to make your experience easier, more enjoyable, and efficient.</p>
        <div class="row">
            <div class="col-md-4">
                <div class="card p-3">
                    <h5>Interactive Blog Section</h5>
                    <p>Find helpful articles, tips, and inspiration for your design ideas.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3">
                    <h5>Style Selector</h5>
                    <p>Explore different styles and find the perfect one for your space.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3">
                    <h5>Budget Planner</h5>
                    <p>Track expenses and stay within your financial goals.</p>
                </div>
            </div>
        </div>
    </section>
      
    <section class="bg-light py-5 text-center">
        <h3>Subscribe to Our Newsletter</h3>
        <p>Stay updated with our latest blog posts and design tips.</p>
        <form class="container">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <input type="email" class="form-control" placeholder="Enter your email">
                </div>
                <div class="col-md-2">
                    <button class="btn btn-dark">Subscribe</button>
                </div>
            </div>
        </form>
    </section>
</div>
