@{
    ViewData["Title"] = "Home Page";
}

<div>
    <section class="text-white d-flex justify-content-center align-items-center position-relative"
             style="background-image: url('https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg?cs=srgb&dl=pexels-fotoaibe-1571460.jpg&fm=jpg');
           background-size: cover;
           background-position: center;
           min-height: 580px;
           width: 100%;">

        <!-- Background Overlay for Better Readability -->
        <div class="position-absolute top-0 start-0 w-100 h-100"
             style="background: rgba(0, 0, 0, 0.5);"></div>

        <h1 class="fw-bold position-relative text-center">PROFESSIONAL INTERIOR DESIGN</h1>
    </section>

        <div class="gallery-container">
            <img src="https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg?cs=srgb&dl=pexels-fotoaibe-1571460.jpg&fm=jpg" alt="Image 1">
            <img src="https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg?cs=srgb&dl=pexels-fotoaibe-1571460.jpg&fm=jpg" alt="Image 2">
            <img src="https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg?cs=srgb&dl=pexels-fotoaibe-1571460.jpg&fm=jpg" alt="Image 3">
            <img src="https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg?cs=srgb&dl=pexels-fotoaibe-1571460.jpg&fm=jpg" alt="Image 4">
        </div>

    <section class="services-section">
        <h2 style="text-align:center">Services</h2>
        <p>We offer a variety of helpful tools and features to make your experience easier, more enjoyable, and efficient:</p>

        <div class="services-grid">
            <div class="service-card">
                <h3>Interactive Blog Section</h3>
                <p>Our blog provides helpful articles, tips, and design ideas to keep you informed and engaged.</p>
            </div>
            <div class="service-card">
                <h3>Style Selector</h3>
                <p>Explore different styles and designs to find the perfect look for your space.</p>
            </div>
            <div class="service-card">
                <h3>Budget Planner</h3>
                <p>Track your expenses and set financial goals to stay on budget for your project.</p>
            </div>
            <div class="service-card">
                <h3>Room Measurement Integration</h3>
                <p>Input your room dimensions to ensure everything fits perfectly within your design.</p>
            </div>
            <div class="service-card">
                <h3>Live Chat</h3>
                <p>Get real-time assistance from our team whenever you need help.</p>
            </div>
            <div class="service-card">
                <h3>Careers</h3>
                <p>Join our team! Explore job openings and internship opportunities.</p>
            </div>
        </div>
    </section>

</div>