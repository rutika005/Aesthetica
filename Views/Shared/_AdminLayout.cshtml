@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/Admin.css">
    <script defer src="~/js/script.js"></script>
</head>
<body>

    <!-- Toggle Button for Sidebar -->
    <button class="menu-btn" id="menuBtn">&#9776;</button>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="profile">
            <img src="~/images/profile.jpg" alt="User Profile">
            <h3>Vaghasiya Rutika</h3>
            <p>Senior Admin</p>
        </div>
        <ul>
            <li><a href="/Dashboard">Dashboard</a></li>
            <li><a href="/BlogManagement">Blog Management</a></li>
            <li><a href="/BudgetManagement">Budget Management</a></li>
            <li><a href="/RoomProjects">Room Projects</a></li>
            <li><a href="/Careers">Careers</a></li>
            <li><a href="/Settings">Settings</a></li>
        </ul>
    </div>

    <!-- Main Content Area -->
    <div class="main-content">
        <button class="menu-btn" id="menuBtn">&#9776;</button>
        <header>
            <div class="top-nav">
                <h2>Admin Dashboard</h2>
                <div class="nav-icons">
                    <span class="icon">🔔</span>
                    <span class="icon">⚙️</span>
                    <img src="~/images/profile.jpg" alt="Profile" class="nav-profile">
                </div>
            </div>
        </header>

        <main>
            @RenderBody() <!-- This will render the child views -->
        </main>
    </div>

</body>
</html>