<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/Admin.css">
</head>
<body>

    <button id="menuBtn" class="menuBtn">☰</button>

    <!-- Sidebar -->
    <section id="sidebar" class="sidebar">
        @* <button class="menu-btn" id="menuBtn">&#9776;</button> *@
        <div class="profile">
            <img src="~/images/Aesthetica.jpg" alt="User Profile">
            <h3>Admin</h3>
            <p>Senior Admin</p>
        </div>
        <ul>
            <li><a asp-area="" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="Blog">Blog Management</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="Budget">Budget Management</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="Room">Room Projects</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="Career">Careers</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="Setting">Settings</a></li>
        </ul>
        <ul class="side-menu">
            <!-- Logout Link -->
            <li>
                <a asp-area="" asp-controller="Admin" asp-action="Index" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>

    </section>

    <!-- Main Content Area -->
    <div class="main-content">
        @* <button class="menu-btn" id="menuBtn">&#9776;</button> *@
        <header>
            <div class="top-nav">
                <h2>Admin Dashboard</h2>
                <div class="nav-icons">
                    <span class="icon">🔔</span>
                    <span class="icon">⚙️</span>
                    <img src="~/images/Aesthetica.jpg" alt="Profile" class="nav-profile">
                </div>
            </div>
        </header>

        <main>
            @RenderBody()
        </main>
    </div>

    <script src="~/js/script.js"></script>
</body>
</html>